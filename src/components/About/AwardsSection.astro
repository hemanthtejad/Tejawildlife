---
const awards = [
  {
    year: '2023',
    title: 'Wildlife Photographer of the Year',
    organization: 'Natural History Museum, London',
    category: 'Animal Behavior'
  },
  {
    year: '2022',
    title: 'Conservation Impact Award',
    organization: 'World Wildlife Foundation',
    category: 'Photography for Conservation'
  },
  {
    year: '2021',
    title: 'Nature\'s Best Photography Award',
    organization: 'Smithsonian Institution',
    category: 'Wildlife'
  }
];
---

<div class="space-y-8">
  <h3 class="text-3xl font-display text-elegant-gold">Awards & Recognition</h3>
  <div class="grid gap-6">
    {awards.map(award => (
      <div class="border border-elegant-gold/20 rounded-lg p-6 hover:border-elegant-gold/40 transition-colors">
        <div class="flex justify-between items-start mb-2">
          <h4 class="text-xl font-display text-elegant-gold-light">{award.title}</h4>
          <span class="text-elegant-cream/60 text-sm">{award.year}</span>
        </div>
        <p class="text-elegant-cream/80">{award.organization}</p>
        <p class="text-elegant-cream/60 text-sm mt-1">{award.category}</p>
      </div>
    ))}
  </div>
</div>