---
interface Props {
  href: string;
  variant: 'primary' | 'secondary';
  external?: boolean;
}

const { href, variant, external } = Astro.props;

const baseStyles = "inline-flex items-center justify-center px-6 py-3 rounded-lg transition-colors text-sm font-medium";
const variants = {
  primary: "bg-elegant-gold text-elegant-black hover:bg-elegant-gold-light",
  secondary: "bg-elegant-dark border border-elegant-gold/20 text-elegant-cream hover:border-elegant-gold/40"
};

const externalProps = external ? {
  target: "_blank",
  rel: "noopener noreferrer"
} : {};
---

<a 
  href={href}
  class:list={[baseStyles, variants[variant]]}
  {...externalProps}
>
  <slot />
</a>