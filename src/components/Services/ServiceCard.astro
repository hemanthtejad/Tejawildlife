---
interface Props {
  title: string;
  description: string;
  price: string;
}

const { title, description, price } = Astro.props;
---

<div class="bg-elegant-black p-8 rounded-lg border border-elegant-gold/20 hover:border-elegant-gold transition-colors">
  <h3 class="text-xl font-display text-elegant-gold mb-4">{title}</h3>
  <p class="text-elegant-cream/80 mb-6">{description}</p>
  <p class="font-semibold text-elegant-gold-light">{price}</p>
</div>