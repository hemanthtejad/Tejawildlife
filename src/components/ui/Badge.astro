---
interface Props {
  variant?: 'default' | 'outline';
}

const { variant = 'default' } = Astro.props;

const variants = {
  default: "bg-elegant-gold/10 text-elegant-gold",
  outline: "border border-elegant-gold/20 text-elegant-gold/80"
};
---

<span class:list={[
  "inline-flex items-center px-3 py-1 rounded-full text-sm font-medium",
  variants[variant]
]}>
  <slot />
</span>